module key_led(
    input               sys_clk  ,    //50Mhz系统时钟
    input               sys_rst_n,    //系统复位，低有效
    input        [7:0]  key,          //按键输入信号
    output [12:0] mod
    );
reg[12:0]speedmod;
assign mod=speedmod;
always @(posedge sys_clk or negedge sys_rst_n) begin
    if(!sys_rst_n) 
    speedmod=13'd5000; 
    else if(key==8'b22)  //按键1按下时，从右向左的流水灯效果
     speedmod=13'd1000;
    else if (key==8'b25)  //按键2按下时，从左向右的流水灯效果
      speedmod=13'd2000;
    else if (key==8'b13)  //按键3按下时，LED闪烁
       speedmod=13'd2500; 
    else
        speedmod=13'd5000;  
end

endmodule 